// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id           String    @id @default(uuid()) @map("_id")
  email        String    @unique
  name         String
  password     String?
  refreshToken String?
  expiresToken DateTime?

  @@map("users")
}

model Tools {
  id          String   @id @default(uuid()) @map("_id")
  name        String
  description String
  link        String
  image       String
  categories  String[]
  tags        String[]

  @@map("tools")
}

type Answers {
  answer String
  tags   String[]
}

model Questions {
  id       String    @id @default(uuid()) @map("_id")
  question String
  answers  Answers[]

  @@map("questions")
}
